<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #00FFFF;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainFXMLController">
    <children>
        <Label layoutX="200.0" layoutY="40.0" text="Registration Form">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        
        <Label layoutX="140.0" layoutY="120.0" text="Name:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="nameField" layoutX="200.0" layoutY="115.0" prefWidth="250.0" promptText="Enter your name" />
        
        <Label layoutX="155.0" layoutY="170.0" text="Age:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="ageField" layoutX="200.0" layoutY="165.0" prefWidth="100.0" promptText="16+" />
        
        <Label layoutX="145.0" layoutY="220.0" text="Email:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="emailField" layoutX="200.0" layoutY="215.0" prefWidth="250.0" promptText="example@email.com" />
        
        <Button layoutX="265.0" layoutY="280.0" mnemonicParsing="false" onAction="#submit" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #000000; -fx-background-radius: 5;" text="Submit" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
